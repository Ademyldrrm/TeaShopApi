@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Referans İşlemleri</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Referans Adı</th>
                        <th>Referans Unvanı</th>
                        <th>Referans Resim</th>

                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.testimonialID</td>
                            <td>@item.testimonialName</td>
                            <td>@item.testimonialComment</td>
                            <td>
                                <img src="@item.testimonialImageUrl" width="80" height="60" alt="Testimonial Image" style="border-radius: 10px;" />
                            </td>

                            <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.testimonialID" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.testimonialID" class="btn btn-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Girişi</a>
            </div>
        </div>
    </div>
    <!-- [ sample-page ] end -->
</div>


@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>İletişim İşlemleri</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Gönderen Ad Soyad</th>
                        <th>Gönderen Mail</th>
                        <th>Konu</th>
                        <th>Mesqaj içeriği</th>
                        <th>Sil</th>
                        
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MessageID</td>
                            <td>@item.MessageSenderName</td>
                            <td>@item.MessageEmail</td>
                            <td>@item.MessageSubject</td>
                            <td>@item.MessageDetail</td>

                            <td><a href="/Admin/Contact/DeleteMessage/@item.MessageID" class="btn btn-danger">Sil</a></td>
                           
                        </tr>
                    }
                </table>
              
            </div>
        </div>
    </div>
    <!-- [ sample-page ] end -->
</div>



